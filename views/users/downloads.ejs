<div class="d-flex justify-content-between w-100">
  <nav class="nav flex-column uploads-nav">
    <a
      class="nav-link p-0 ps-3 downloads-assetActive"
      type="button"
      onclick="clickAssetType(this, 'downloads-')"
      >3d Models</a
    >
    <a
      class="nav-link p-0 ps-3"
      type="button"
      onclick="clickAssetType(this, 'downloads-')"
      >360 Images</a
    >
  </nav>
  <div class="row gap-3 downloads-row d-flex" id="downloads-3d Models">
    <%if(downloads.models.length>0){%> <%downloads.models.forEach(card=>{%>
    <div class="card upload-card col-md-3 p-0">
      <div class="upload-card-img-div">
        <img
          src="<%= card.assetPath.folderpath+
                    '/' +
                    card.assetPath.thumbnail %>"
          class="upload-card-img card-img-top"
          alt="<%= card._id %>"
        />
      </div>
      <div
        class="card-body upload-card-body p-3 d-flex justify-content-between"
      >
        <div class="my-auto mx-0 w-75">
          <p class="card-title text-overflow m-0 w-100"><%= card.title %></p>
          <p class="card-text text-overflow ">
           <small> <%= card.tags.toString().replaceAll(","," ") %></small>
          </p>
        </div>
        <div class="my-auto mx-0">
          <form action="/downloadasset/model/<%= card._id %>" method="POST">
            <Button
              type="submit"
              class="p-0 btn btn-outline-primary box-shadow-0 border-0"
              ><i class="fa fa-download icon-size" aria-hidden="true"></i
            ></Button>
          </form>
        </div>
      </div>
    </div>
    <%})%> <%}else{%>
    <p class="text-center">You have not downloaded any 3d Models.</p>
    <%}%>
  </div>
  <div class="row gap-3 downloads-row d-none" id="downloads-360 Images">
    <%if(downloads["360"].length>0){%> <%downloads["360"].forEach(card=>{%>
    <div class="card upload-card col-md-3 p-0">
      <div class="upload-card-img-div">
        <img
          src="<%= card.assetPath.folderpath + '/'
                 +
                card.assetPath.thumbnail %>"
          class="w-100 upload-card-img"
          alt="<%= card._id %>"
        />
      </div>
      <div
        class="card-body upload-card-body p-3 d-flex justify-content-between"
      >
        <div class="my-auto mx-0">
          <p class="card-title m-0"><%= card.title %></p>
          <p class="card-text text-overflow ">
            <small> <%= card.tags.toString().replaceAll(","," ") %></small>
           </p>
        </div>
        <div class="my-auto mx-0">
          <form action="/downloadasset/model/<%= card._id %>" method="POST">
            <Button
              type="submit"
              class="p-0 btn btn-outline-primary box-shadow-0 border-0"
              ><i class="fa fa-download icon-size" aria-hidden="true"></i
            ></Button>
          </form>
        </div>
      </div>
    </div>
    <%})%> <%}else{%>
    <p class="text-center">You have not downloaded any 360 Images.</p>
    <%}%>
  </div>
</div>
