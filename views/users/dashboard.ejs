<%- include('../partials/header'); %>
<section class="w-75 d-flex flex-column m-auto mt-5">
  <div class="d-flex align-items-center">
    <img
      src="https://mdbootstrap.com/img/new/avatars/8.jpg"
      alt=""
      style="width: 60px; height: 60px"
      class="rounded-circle"
    />
    <div class="ms-3">
      <h3 class="fw-bold mb-1"><%= user.email %></h3>
      <% if (user.isAdmin) { %>
      <p class="text-muted mb-0">Admin</p>
      <%}else{%>
      <p class="text-muted mb-0">Student</p>
      <%}%>
    </div>
  </div>
  <!-- Tabs navs -->
  <ul
    class="border-bottom nav nav-tabs nav-justified mb-3"
    id="ex1"
    role="tablist"
  >
    <li class="nav-item" role="presentation">
      <a
        class="nav-link active"
        id="ex3-tab-1"
        data-mdb-toggle="tab"
        href="#ex3-tabs-1"
        role="tab"
        aria-controls="ex3-tabs-1"
        aria-selected="true"
        >Profile</a
      >
    </li>
    <li class="nav-item" role="presentation">
      <a
        class="nav-link"
        id="ex3-tab-2"
        data-mdb-toggle="tab"
        href="#ex3-tabs-2"
        role="tab"
        aria-controls="ex3-tabs-2"
        aria-selected="false"
        >Uploads</a
      >
    </li>
    <li class="nav-item" role="presentation">
      <a
        class="nav-link"
        id="ex3-tab-3"
        data-mdb-toggle="tab"
        href="#ex3-tabs-3"
        role="tab"
        aria-controls="ex3-tabs-3"
        aria-selected="false"
        >Downloads</a
      >
    </li>
    <li class="nav-item" role="presentation">
      <a
        class="nav-link"
        id="ex3-tab-4"
        data-mdb-toggle="tab"
        href="#ex3-tabs-4"
        role="tab"
        aria-controls="ex3-tabs-4"
        aria-selected="false"
        >Enrollment</a
      >
    </li>
  </ul>
  <!-- Tabs navs -->

  <!-- Tabs content -->
  <div class="tab-content tab-content-height" id="ex2-content">
    <div
      class="tab-pane fade show active"
      id="ex3-tabs-1"
      role="tabpanel"
      aria-labelledby="ex3-tab-1"
    >
      <%- include('./profile')%>
      
    </div>
    <div
      class="tab-pane fade"
      id="ex3-tabs-2"
      role="tabpanel"
      aria-labelledby="ex3-tab-2"
    >
      <%- include('./uploads'); %>
    </div>
    <div
      class="tab-pane fade"
      id="ex3-tabs-3"
      role="tabpanel"
      aria-labelledby="ex3-tab-3"
    >
      <%- include('./downloads'); %>
    </div>
    <div
      class="tab-pane fade h-100"
      id="ex3-tabs-4"
      role="tabpanel"
      aria-labelledby="ex3-tab-4"
    >
      <%- include('./enrollment'); %>
    </div>
  </div>
</section>
<%- include('../partials/footer'); %>
