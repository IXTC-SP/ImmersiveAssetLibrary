<div class="card-body w-100 p-0">
  <!-- tab contents -->
  <% if(profile !== "edit"){%>
  <form method="POST" action="/<%= user._id %>/dashboard/profile">
    <div class="card-body profile-body">
      <!-- email -->
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Email</p>
        </div>
        <div class="col-sm-9">
          <input
            type="hidden"
            name="email"
            value="<%= user.email %>"
            class="text-muted mb-0"
          /><%= user.email %>
        </div>
      </div>
      <!-- Account Type-->
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Account Type</p>
        </div>
        <div class="col-sm-9">
          <% if(user.isAdmin ){%>
          <input
            type="hidden"
            value="Admin"
            class="text-muted mb-0"
          />Admin <%} else {%>
          <input
            type="hidden"
            value="Student"
            class="text-muted mb-0"
          />Student <%}%>
        </div>
      </div>
      <!-- Downloaded-->
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Downloaded Assets</p>
        </div>
        <div class="col-sm-9">
          <input
            type="hidden"
            value="3"
            class="text-muted mb-0"
          /><%= Number(user.downloadedModels.length) + Number(user.downloadedThreeSixty.length) %>
        </div>
      </div>
        <!-- uploaded-->
        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0">Uploaded Assets</p>
          </div>
          <div class="col-sm-9">
            <input
              type="hidden"
              value="3"
              class="text-muted mb-0"
            /><%= Number(uploads["360"].length) + Number(uploads["models"].length)  %>
          </div>
        </div>
      <!-- edit button-->
      <div class="row align-items-center">
        <div class="col-sm-3">
          <p class="mb-0">Password</p>
        </div>

        <div class="col-sm-9">
          <button type="submit" class="btn theme-color btn-rounded">
            <i class="fa-solid fa-pen me-2" aria-hidden="true"></i>Change
            Password
          </button>
        </div>
      </div>
    </div>
  </form>
  <%}else{%>
  <form method="POST" action="/<%= user._id %>/dashboard/profile?_method=PATCH">
    <div class="card-body profile-body">
      <!-- email -->
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Email</p>
        </div>
        <div class="col-sm-9">
          <input
            type="hidden"
            name="email"
            value="<%= user.email %>"
            class="text-muted mb-0"
          /><%= user.email %>
        </div>
      </div>
      <!-- Account Type-->
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Account Type</p>
        </div>
        <div class="col-sm-9">
          <% if(user.isAdmin ){%>
          <input
            type="hidden"
            name="credits"
            value="Admin"
            class="text-muted mb-0"
          />Admin <%} else {%>
          <input
            type="hidden"
            name="credits"
            value="Admin"
            class="text-muted mb-0"
          />Student <%}%>
        </div>
      </div>
       <!-- Downloaded-->
       <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Downloaded Assets</p>
        </div>
        <div class="col-sm-9">
          <input
            type="hidden"
            value="3"
            class="text-muted mb-0"
          /><%= Number(user.downloadedModels.length) + Number(user.downloadedThreeSixty.length) %>
        </div>
      </div>
        <!-- uploaded-->
        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0">Uploaded Assets</p>
          </div>
          <div class="col-sm-9">
            <input
              type="hidden"
              value="3"
              class="text-muted mb-0"
            /><%= Number(uploads["360"].length) + Number(uploads["models"].length)  %>
          </div>
        </div>
      <!-- pw-->
      <div class="row align-items-center">
        <div class="col-sm-3">
          <p class="mb-0">New Password</p>
        </div>
        <div class="col-sm-9">
          <input class="w-100" type="password" name="password" required="" id="id_password" />
          <i
            class="far fa-eye password-eye"
            id="togglePassword"
          ></i>
        </div>
      </div>
      <!-- confirm pw-->
      <div class="row align-items-center">
        <div class="col-sm-3">
          <p class="mb-0">Confirm Password</p>
        </div>
        <div class="col-sm-9">
          <input
          class="w-100" 
            type="password"
            name="confirmPassword"
            required=""
            id="id_confirmPassword"
          />
          <i
            class="far fa-eye password-eye"
            id="toggleConfirmPassword"
          ></i>
        </div>
      </div>
      <div class="mb-3">
        <%if(errorObj.error){%>
        <!-- <i class="fa-solid fa-circle-exclamation error-message align-self-center px-2"></i> -->
        <p class="error-message m-0"><%= errorObj.message %></p>
        <%}%>
      </div>
      <div class="d-flex justify-content-between">
        <div >
          <button type="button" onclick="window.location.href='/<%= user._id %>/dashboard/profile';" class="btn btn-outline-info btn-rounded">
            Cancel
          </button>
        </div>
        <div >
          <button type="submit" class="btn theme-color btn-rounded">
            <i class="fa-solid fas fa-save me-2" aria-hidden="true"></i>Save
          </button>
        </div>
      </div>
     
    </div>
  </form>
  <%}%>
</div>

